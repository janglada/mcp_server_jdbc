# Environment variables for Informix MCP Server
# Copy this file to .env and update with your database credentials

# Configuration for Informix Docker container
# Docker run: docker run -it --name iif_developer_edition --privileged -p 9088:9088 -e LICENSE=accept ibmcom/informix-developer-database:latest
INFORMIX_HOST=localhost
INFORMIX_PORT=9088
INFORMIX_DATABASE=sysmaster
INFORMIX_SERVER=informix
INFORMIX_USERNAME=informix
INFORMIX_PASSWORD=in4mix
INFORMIX_POOL_SIZE=5

# Optional: Path to properties file (overrides environment variables)
# INFORMIX_CONFIG_FILE=/path/to/database.properties
